       android:textSize="40sp"
       android:textStyle="bold|italic"
       />
    <Button

        android:id="@+id/btnnn"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Start"

        />

</LinearLayout>